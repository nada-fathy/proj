package com.mycompany.drawing;

import java.awt.Color;
import java.awt.Graphics;

/**
 *
 * @author ELTAYEB
 */
public class Rect extends Shapes {
   int x1;
   int y1;
    private int width;
    private int height;
    public Rect(int x1,int y1,int width,int height )
    {
    this.x1=x1;
    this.y1=y1;
    this.width=width;
    this.height=height;   
    }
    public void draw(Graphics g)
    {
        g.drawRect(x1, y1, width, height);
        setColor(Color.red);
     
    }
    
    
    
}
